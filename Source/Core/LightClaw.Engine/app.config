<?xml version="1.0"?>
<configuration>
	<!-- Config Section Declarations ("configSections"-Element must stay at the top! Won't work otherwise.) -->
	<configSections>
		<sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
			<section name="LightClaw.Engine.Configuration.VideoSettings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
			<section name="LightClaw.Engine.Configuration.GeneralSettings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
		</sectionGroup>
		<sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
			<section name="LightClaw.Engine.Configuration.VideoSettings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
		</sectionGroup>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>

	<!-- Startup -->
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
	</startup>

	<!-- Settings -->
	<applicationSettings>
		<LightClaw.Engine.Configuration.VideoSettings>
			<setting name="SuppressDraw" serializeAs="String">
				<value>False</value>
			</setting>
		</LightClaw.Engine.Configuration.VideoSettings>
		<LightClaw.Engine.Configuration.GeneralSettings>
			<setting name="GameName" serializeAs="String">
				<value>LightClaw Game</value>
			</setting>
			<setting name="GameCodeAssembly" serializeAs="String">
				<value>LightClaw.GameCode.dll</value>
			</setting>
			<setting name="WindowTitle" serializeAs="String">
				<value>LightClaw Game</value>
			</setting>
			<setting name="IconPath" serializeAs="String">
				<value>Game/Icon.ico</value>
			</setting>
			<setting name="StartScene" serializeAs="String">
				<value>Game/Start.lcs</value>
			</setting>
		</LightClaw.Engine.Configuration.GeneralSettings>
	</applicationSettings>
	<userSettings>
		<LightClaw.Engine.Configuration.VideoSettings>
			<setting name="VSync" serializeAs="String">
				<value>Adaptive</value>
			</setting>
			<setting name="Width" serializeAs="String">
				<value>1280</value>
			</setting>
			<setting name="Height" serializeAs="String">
				<value>720</value>
			</setting>
			<setting name="WindowState" serializeAs="String">
				<value>Normal</value>
			</setting>
		</LightClaw.Engine.Configuration.VideoSettings>
	</userSettings>

	<!-- Logging -->
	<log4net>
		<root>
			<level value="DEBUG"/>
			<appender-ref ref="RollingFileAppender"/>
			<appender-ref ref="DebugRollingFileAppender"/>
		</root>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="Logging/LightClaw.log"/>
			<appendToFile value="true"/>
			<rollingStyle value="Size"/>
			<maxSizeRollBackups value="1"/>
			<maximumFileSize value="10MB"/>
			<staticLogFileName value="true"/>
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<threshold value="INFO"/>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%utcdate | %thread | %level | %logger | %message%newline"/>
			</layout>
		</appender>
		<!-- Appender for debugging purposes using XML for more detail, remove / log WARN or FATAL errors only in release builds -->
		<appender name="DebugRollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="Logging/Debug.log"/>
			<appendToFile value="true"/>
			<rollingStyle value="Size"/>
			<maxSizeRollBackups value="1"/>
			<maximumFileSize value="10MB"/>
			<staticLogFileName value="true"/>
			<threshold value="DEBUG"/>
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<layout type="LightClaw.Engine.Core.XmlLayout, LightClaw.Engine, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"/>
		</appender>
	</log4net>
</configuration>
